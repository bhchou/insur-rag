#local or google
LLM_PROVIDER=google

# for local vllm server
VLLM_ENDPOINT=http://127.0.0.1:12345
BEARER_TOKEN=BBB
MODEL_NAME=Gemma-3-7B

# for google api
GOOGLE_API_KEY=AI....

# [RAG 漏斗參數]
# 第一階段：LanceDB 粗排撈取的筆數 (建議 20~50，越大 Recall 越高但越慢)
RAG_RECALL_LIMIT=15

# 第二階段：Re-rank 後最終給 LLM 的筆數 (建議 3~5，受限於 LLM Context Window)
RAG_RERANK_LIMIT=3

# MAX CHUNKS_PER_DOC: 每個文件最多使用的 chunk 數量 (避免單一文件佔用過多上下文)
MAX_CHUNKS_PER_DOC=2

# Re-ranker API 網址 (如果未來跑 Docker 或不同台機器可以改)
RERANK_API_URL="http://localhost:8000/rerank"

SYSTEM_PROMPT_PATH=./data/system_prompt.txt

# for web server
RUST_LOG=info
HOST=0.0.0.0
PORT=8000

# for redis used by web session
REDIS_URL=redis://localhost:6379

# for docker user permission
PGID=1000
PUID=1000